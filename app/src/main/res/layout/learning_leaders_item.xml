<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp">

        <RelativeLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/learning_textView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:text="Hours"
                android:textSize="16sp"
                app:fontFamily="sans-serif-light"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/learning_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="41.5dp"
                android:text="Learning hours,"/>


            <TextView
                android:id="@+id/learning_textView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textSize="20sp"
                app:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="41.5dp"

                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/learning_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="-170dp"
                android:layout_marginRight="128dp"
                android:src="@drawable/learner" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>